            <shell:ApplicationBarIconButton IconUri="/Assets/Player/appbar.transport.play.rest.png" Text="play" Click="playButton_Click" IsEnabled="False"/>
            <shell:ApplicationBarIconButton IconUri="/Assets/Player/appbar.transport.pause.rest.png" Text="pause" Click="pauseButton_Click" IsEnabled="False"/>
            <!--<shell:ApplicationBarIconButton IconUri="/Assets/Player/appbar.transport.ff.rest.png" Text="next" Click="nextButton_Click"/>-->

