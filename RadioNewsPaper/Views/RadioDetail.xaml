    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/background.jpg" Stretch="UniformToFill" Grid.RowSpan="2"/>
        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="{Binding LocalizedResources.ApplicationTitle, Source={StaticResource LocalizedStrings}}" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock Text="Now playing" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>


        <Grid x:Name="ContentPanel" Grid.Row="2" Margin="12,0,12,0">
            <TextBlock Height="32" HorizontalAlignment="Left" Margin="12,397,0,0" x:Name="txtState" Text="State: N/A" VerticalAlignment="Top" Width="438" />
            <TextBlock TextWrapping="Wrap" Height="Auto" Margin="12,170,0,0" x:Name="warning" Text="We Are Connection You to The Station. Hope They Are Online, If Not Then Check Back Later ..." VerticalAlignment="Top" Width="438" FontSize="27" HorizontalAlignment="Left" TextAlignment="Center" Foreground="#DEFFFFFF" />
            <TextBlock Height="45" HorizontalAlignment="Left" Margin="12,24,0,0" x:Name="txtTrack" Text="Track:" VerticalAlignment="Top" Width="438" FontSize="28" />
            <ProgressBar HorizontalAlignment="Left" Margin="12,100,0,0" x:Name="positionIndicator" VerticalAlignment="Top" Width="438"/>
            <TextBlock Height="30" HorizontalAlignment="Left" Margin="12,120,0,0" x:Name="textPosition" Text="00:00:00" VerticalAlignment="Top" />
            <TextBlock Height="30" HorizontalAlignment="Left" Margin="368,120,0,0" x:Name="textRemaining" Text="-00:00:00" VerticalAlignment="Top" />
